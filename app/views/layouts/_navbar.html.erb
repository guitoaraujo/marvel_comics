<nav class="navbar">
    <div class="container">
        <div class="logo">
            <%= link_to root_path do %>
                <%= image_tag 'marvel_logo.png', alt: 'Logo', width: 150 %>
            <% end %>            
        </div>
        <div class="search-bar">
            <%= form_with url: comics_search_path, method: :get, local: true, class: 'search-form' do %>
                <%= text_field_tag :query, params[:query], placeholder: 'Deadpool', class: 'search-input' %>
            <% end %>
        </div>

        <% if user_signed_in? %>
            <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to log out?' } %>
        <% end %>       
    </div>
</nav>